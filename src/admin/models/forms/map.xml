<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="hidden">
        <field name="id" type="hidden"/>
        <field name="tabsdata" type="hidden" filter="raw"/>
        <field name="checked_out" type="hidden" filter="unset"/>
        <field name="checked_out_time" type="hidden" filter="unset"/>
    </fieldset>

    <!-- title/alias fields -->
    <fieldset>
        <field name="title"
               type="text"
               label="COM_FOCALPOINT_FORM_MAP_TITLE_LBL"
               description="COM_FOCALPOINT_FORM_MAP_TITLE_DESC"
               required="true"
               filter="string"
               maxlength="150"/>

        <field name="alias"
               type="text"
               label="COM_FOCALPOINT_FORM_MAP_ALIAS_LBL"
               description="JFIELD_ALIAS_DESC"
               filter="safehtml"
               hint="JFIELD_ALIAS_PLACEHOLDER"/>
    </fieldset>

    <fieldset name="basic" label="Basic Settings">
        <field name="text"
               type="editor"
               label="COM_FOCALPOINT_FORM_MAP_DESCRIPTION_LBL"
               description="COM_FOCALPOINT_FORM_MAP_DESCRIPTION_DESC"
               height="250"
               filter="safehtml"/>
    </fieldset>

    <fieldset name="settings">
        <field name="state"
               type="list"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               class="chzn-color-state"
               size="1"
               default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field name="geocoder" type="shacklocations.geocoder"/>

        <field name="latitude"
               type="text"
               label="COM_FOCALPOINT_FORM_MAP_LATITUDE_LBL"
               description="COM_FOCALPOINT_FORM_MAP_LATITUDE_DESC"
               required="true"
               filter="raw"
               maxlength="30"/>

        <field name="longitude"
               type="text"
               label="COM_FOCALPOINT_FORM_MAP_LONGITUDE_LBL"
               description="COM_FOCALPOINT_FORM_MAP_LONGITUDE_DESC"
               required="true"
               filter="raw"
               maxlength="30"/>

        <field name="created_by"
               type="user"
               label="COM_FOCALPOINT_FORM_MAP_CREATED_BY_LBL"
               description="COM_FOCALPOINT_FORM_MAP_CREATED_BY_DESC"/>
    </fieldset>

    <fields name="tabsdata">
        <fieldset name="tabs"
                  label="Tabs">
            <field name="tabs" type="shacklocations.maptabs"/>
        </fieldset>
    </fields>

    <fieldset name="metadata" label="Metadata">
        <fields name="metadata">
            <field name="metakey"
                   type="textarea"
                   label="COM_FOCALPOINT_FORM_META_KEYWORDS_LABEL"
                   description="COM_FOCALPOINT_FORM_META_KEYWORDS_DESC"
                   rows="3"/>

            <field name="metadesc"
                   type="textarea"
                   label="COM_FOCALPOINT_FORM_META_DESCRIPTION_LABEL"
                   description="COM_FOCALPOINT_FORM_META_DESCRIPTION_DESC"
                   rows="3"/>

            <field name="robots"
                   type="list"
                   useglobal="true"
                   label="COM_FOCALPOINT_FORM_METADATA_ROBOTS_LABEL"
                   description="COM_FOCALPOINT_FORM_METADATA_ROBOTS_DESC">
                <option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
                <option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
                <option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
                <option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
            </field>

            <field name="author"
                   type="text"
                   label="JAUTHOR"
                   description="COM_FOCALPOINT_FORM_METADATA_AUTHOR_DESC"/>

            <field name="rights"
                   type="textarea"
                   label="COM_FOCALPOINT_FORM_META_RIGHTS_LABEL"
                   description="COM_FOCALPOINT_FORM_META_RIGHTS_DESC"
                   rows="2"/>
        </fields>
    </fieldset>

    <fieldset name="params"
              label="Advanced Parameters">
        <fields name="params">
            <field name="showmarkers"
                   type="list"
                   useglobal="true"
                   class="chzn-single chzn-color-state"
                   label="COM_FOCALPOINT_FORM_CONFIG_SHOW_MARKERS_LBL"
                   description="COM_FOCALPOINT_FORM_CONFIG_SHOW_MARKERS_DESC">
                <option value="1">JSHOW</option>
                <option value="0">JHIDE</option>
            </field>

            <field name="mapTypeId"
                   type="list"
                   useglobal="true"
                   label="COM_FOCALPOINT_FORM_CONFIG_MAP_TYPE_LBL"
                   description="COM_FOCALPOINT_FORM_CONFIG_MAP_TYPE_DESC">
                <option value="ROADMAP">ROADMAP</option>
                <option value="SATELLITE">SATELLITE</option>
                <option value="HYBRID">HYBRID</option>
                <option value="TERRAIN">TERRAIN</option>
            </field>

            <field name="mapTypeControl"
                   type="list"
                   useglobal="true"
                   class="chzn-single chzn-color-state"
                   label="COM_FOCALPOINT_FORM_CONFIG_MAP_TYPE_CONTROL_LBL"
                   description="COM_FOCALPOINT_FORM_CONFIG_MAP_TYPE_CONTROL_DESC">
                <option value="1">JENABLED</option>
                <option value="0">JDISABLED</option>
            </field>

            <field type="hidden" name="googlePOI"/>

            <field name="zoom"
                   type="list"
                   useglobal="true"
                   class="chzn-single"
                   label="COM_FOCALPOINT_FORM_CONFIG_ZOOM_LVL_LBL"
                   description="COM_FOCALPOINT_FORM_CONFIG_ZOOM_LVL_DESC">
                <option value="1">1</option>
                <option value="2">2</option>
