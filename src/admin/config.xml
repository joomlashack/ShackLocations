               label="COM_FOCALPOINT_FORM_LBL_CONFIG_LOCATION_ORDER_DIR_LBL"
               showon="locationlist:1">
            <option value="asc">COM_FOCALPOINT_OPTION_ASC</option>
            <option value="desc">COM_FOCALPOINT_OPTION_DESC</option>
